<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/signup.css" />

<body>
  <div class="container">
    <div class="main-container ">
      <div class="shadow-title">signup</div>
      <div class="main-signup"></div>
    </div>
    <form
      onsubmit="return validateSignupForm()"
      action="/admin/signup"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="signup-frame" style="width: 1300px">
        <div class="upper-signup">
          <div class="left-return">
            <a href="/admin">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-chevron-left"
                viewBox="0 0 16 16"
              >
                <path
                  fill-rule="evenodd"
                  d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0"
                />
              </svg>
            </a>
            <a href="/admin"> Return Home</a>
          </div>
          <div class="right-login">
            <a href="/admin/login" class="left-side">Already a Member?</a>
            <a href="/admin/login" class="right-side">LOG IN NOW</a>
          </div>
        </div>

        <div class="signup-text">SIGNUP</div>
        <div class="sign-input-frame" style="justify-content: space-between">
          <div class="sign-up-frame">
            <label>First Name</label>
            <input
              type="text"
              name="memberNick"
              class="member-nick"
              placeholder="john.doe@gmail.com"
              value=""
            />
          </div>
          <div class="sign-up-frame">
            <label>Last Name</label>
            <input
              type="text"
              name="memberNick"
              class="member-nick"
              placeholder="john.doe@gmail.com"
              value=""
            />
          </div>
        </div>

        <div class="sign-input-frame" style="justify-content: space-between">
          <div class="sign-up-frame">
            <label>Username</label>
            <input
              type="text"
              name="memberNick"
              class="member-nick"
              placeholder="Username"
              value=""
            />
          </div>
          <div class="sign-up-frame">
            <label>Phone </label>
            <input
              type="text"
              name="memberPhone"
              class="member-phone"
              placeholder="Phone"
              value=""
            />
          </div>
        </div>
        <div class="sign-input-frame" style="justify-content: space-between">
          <div class="sign-up-frame">
            <label>Password </label>
            <input
              type="password"
              name="memberPassword"
              class="member-password"
              placeholder="Password"
              value=""
            />
          </div>
          <div class="sign-up-frame">
            <label>Confirm password </label>
            <input
              type="password"
              name="confirmPassword"
              class="confirm-password"
              placeholder="Repeat password"
              value=""
            />
          </div>
        </div>
        <div class="sign-input-frame" style="justify-content: space-between">
          <div class="sign-up-frame image-inserting">
            <label>
              Please upload image. Attention: only jpg, jpeg, and png formats
              are permitted!
            </label>
            <div
              class="file-box bs3-primary preview-image"
              style="margin-top: 5px; display: flex"
            >
              <input
                class="upload-name"
                value="Choose image"
                disabled="disabled"
              />
              <label for="input-file" class="file-input-label"
                >Upload Image</label
              >
              <input
                type="file"
                id="input-file"
                class="upload-hidden form-control-file member-image"
                name="memberImage"
              />
            </div>
            <div class="sign-input-frame">
              <div class="checkbox-sign">
                <input
                  type="checkbox"
                  name="memberNick"
                  class="member-nick"
                  placeholder="Username"
                  value=""
                />
                <label
                  >I agree to all the <a href="">Terms</a> and
                  <a href="">Privacy Policies</a></label
                >
              </div>
            </div>
          </div>

          <div class="sign-up-frame right-preview-image">
            <span class="media-text">Preview Image</span>
            <img class="upload-img-frame" src="/img/default.jpeg" />
          </div>
        </div>

        <input name="memberType" value="RESTAURANT" hidden />

        <button class="signup-btn btn" name="signup" type="submit">
          Signup
        </button>
      </div>
    </form>
  </div>

  <script type="text/javascript" src="/js/signup.js"></script>
</body>

<%- include('includes/footer') %>
